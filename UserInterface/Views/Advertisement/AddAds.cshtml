
@{
    ViewBag.Title = "AddAds";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<section class="content-header">
    <h1>ADD ADVERTISEMENTS</h1>
    <ol class="breadcrumb float-sm-left">
        <li class="breadcrumb-item"><a>Admin</a></li>
        <li class="breadcrumb-item"><a>Ads</a></li>
        <li class="breadcrumb-item active"><a>Add Ads</a></li>
    </ol>
</section>
<br />
<div class="card-footer">
    <button type="submit" class="btn btn-primary" href="/Admin/Ads/AdsList">Ads List</button>
</div>

<section class="content">
    <div class=" = row">
        <div class="col-md-9">
            @Html.Partial("~/Views/Shared/MessageForm.cshtml")
            <div class="box box-primary">
                @using (Html.BeginForm("AddAds", "Advertisement", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                {
                    @Html.Partial("Partial/AdsForm")
                }
            </div>
        </div>
    </div>
</section>


