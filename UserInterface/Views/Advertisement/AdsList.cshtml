
@{
    ViewBag.Title = "AdsList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@model List<DTO.AdsDTO>

<section class="content-header">
    <h1>Ads List</h1>
    <ol class="breadcrumb float-sm-left">
        <li class="breadcrumb-item"><a>Admin</a></li>
        <li class="breadcrumb-item"><a>Ads</a></li>
        <li class="breadcrumb-item active"><a>Ads List</a></li>
    </ol>
</section>
<br />
<div class="card-footer">
    <button type="submit" class="btn btn-primary" href="/Admin/Advertisement/AdsList">Add Ads</button>
</div>

<div class="card">

    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>

                    <th> Name</th>
                    <th>Link</th>
                    <th>Image</th>
                    <th>Update</th>
                    <th>Delete</th>

                </tr>
            </thead>


            @foreach (var item in Model)
            {
                <tbody>
                    <tr id="a_@item.ID">
                        <td>@item.Name</td>
                        <td>@item.Link</td>

                        <td>
                            <img src="~/Areas/Admin/Content/AdsImage/" width="60" height="40" />
                        </td>
                        <td align="center" valign="middle">
                            
                            <a href="~/Advertisement/UpdateAds/@item.ID">
                                <br />
                                <img src="~/Areas/Admin/Content/Icon/Update.png" width="60" height="40" />
                            </a>
                        </td>
                        <td align="center" valign="middle">
                            <a href="#">
                                <br />
                                <img src="~/Areas/Admin/Content/Icon/delete.png" width="60" height="40" />

                            </a>
                        </td>
                    </tr>

                </tbody>
            }

            <tfoot>
                <tr>
                   
                    <th> Name</th>
                    <th>Link</th>
                    <th>Image</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
            </tfoot>
        </table>
    </div>
    <!-- /.card-body -->
</div>
<!-- /.card -->
