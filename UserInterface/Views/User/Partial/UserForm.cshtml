@model DTO.UserDTO
<div class="box-body">
    <div class="form-group">
        <label>User Name</label>
        @Html.TextBoxFor(x => x.Username, new { @class = "form-control", @placeholder = "User Name" })
        @Html.ValidationMessageFor(x => x.Username)
    </div>

    <div class="form-group">
        <label>Password</label>
        @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @placeholder = "User Name" })
        @Html.ValidationMessageFor(x => x.Password)
    </div>
    <div class="form-check">
        <input type="checkbox" class="form-check-input" name="isAdmin" checked="@Model.isAdmin" value="true">
        <label class="form-check-label">Is Admin?</label>
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.UserImage)
        <br />
        <input type="file" name="UserImage" accept="image/gif, image/png, image/jpeg, image/jpg"
               onchange="$('#UserImage')[0].src=window.URL.createObjectURL(this.files[0])" />
        <br />
        @if (Model != null && Model.ImagePath != null)
        {
            <br />
            <img src="~/Areas/Admin/Content/UserImage/@Model.ImagePath" width="300" height="300" />
        }
        else
        {
            <img src="" width="300" height="300" id="UserImage" />
        }


    </div>

    <div class="form-group">
        <label>First Name</label>
        @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control", @placeholder = "First Name" })
        @Html.ValidationMessageFor(x => x.FirstName)
    </div>

    <div class="form-group">
        <label>LastName</label>
        @Html.TextBoxFor(x => x.LastName, new { @class = "form-control", @placeholder = "Last Name" })
        @Html.ValidationMessageFor(x => x.LastName)
    </div>

    <div class="form-group">
        <label>Email</label>
        @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @placeholder = "Email" })
        @Html.ValidationMessageFor(x => x.Email)
    </div>

    <input type="number" hidden name="ID" value=" @Model.ID"/>
    <div class="card-footer">
        <button class="btn btn-primary" type="submit">Save</button>
    </div>


</div>